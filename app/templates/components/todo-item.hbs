{{#if isEditing}}
   {{input type="text" class="edit" value=todo.title focus-out="submit" insert-newline="submit" escape-press="cancel" autofocus="autofocus"}}
{{else}}
   {{input type="checkbox" class="toggle" checked=todo.isDone}}
   <label {{action "edit" on="doubleClick"}}>{{todo.title}}</label>
   <button {{action "delete"}} class="destroy"></button>
{{/if}}